<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_200sdp">

    <ImageView
        android:id="@+id/venueList_ivImageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="fitXY"
        android:src="@drawable/image_holder" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:scaleType="fitXY"
        android:src="@mipmap/eventbckimage" />

    <FrameLayout
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_5sdp">

        <ImageView
            android:id="@+id/venueList_heart"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:padding="@dimen/_3sdp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_heart" />

        <ImageView
            android:id="@+id/venueList_heart_selected"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="right"
            android:padding="@dimen/_3sdp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_heart_selected"
            android:visibility="gone" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"
        android:layout_gravity="bottom"
        android:padding="@dimen/_7sdp">

        <TextView
            android:id="@+id/venueList_txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif"
            android:text="Daler Mehandi"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:layout_below="@+id/venueList_txtTitle"
            android:layout_marginTop="@dimen/_8sdp"
            android:padding="@dimen/_2sdp"
            android:src="@mipmap/location_white" />

        <TextView
            android:id="@+id/venueList_txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/venueList_txtTitle"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="DownTown, Gurgaon"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/eventList_txtEventBook"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/_3sdp"
            android:background="@drawable/rating_event"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="3.5"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>

</FrameLayout>