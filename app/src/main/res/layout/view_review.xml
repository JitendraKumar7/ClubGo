<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/review_txtDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_7sdp"
        android:fontFamily="sans-serif"
        android:layout_marginRight="@dimen/_7sdp"
        android:padding="@dimen/_7sdp"
        android:text="M gonna start DJing at a club that actually has a microphone, and I want to be able to make use of it by knowing what to say.I have a kinda cheesy voice over the mic, and combined with cheesy phrases it sounds twice as cheesy."
        android:textColor="@color/black"
        android:textSize="@dimen/_10sdp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_7sdp"
        android:layout_marginRight="@dimen/_7sdp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/view_home_image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:src="@drawable/image_holder" />

        <TextView
            android:id="@+id/review_txtUsername"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/view_home_image"
            android:text="Title Text"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/review_txtSubTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/review_txtUsername"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="sans-serif"
            android:layout_toRightOf="@+id/view_home_image"
            android:text="SingleText"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/review_txtRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_toLeftOf="@+id/review_txtRate"
            android:padding="@dimen/_5sdp"
            android:fontFamily="sans-serif"
            android:text="Rated"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/review_txtRate"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/review_rating"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="3.5"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:background="@color/gray" />

</LinearLayout>