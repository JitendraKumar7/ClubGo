<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="in.clubgo.app.book.ActivityBook">

    <RelativeLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@mipmap/header"
        android:elevation="@dimen/_7sdp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/prv_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_toRightOf="@+id/back"
            android:fontFamily="sans-serif"
            android:text="Tickets"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />


        <TextView
            android:id="@+id/ticket_txtCall"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Call"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Title"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/_15sdp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_2sdp">

        <ImageView
            android:id="@+id/img_couple1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/ticket_couple" />

        <TextView
            android:id="@+id/ticket_txtCouplePriceDiscounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_couple1"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_txtCouplePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ticket_txtCouplePriceDiscounted"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textColor="#DF3C4D"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/ticket_txtCouplePriceDescription"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_txtCouplePrice"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/img_couple1"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Full Cover charge"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/ticket_ivMinus1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_txtCoupleCount"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/sub" />

        <TextView
            android:id="@+id/ticket_txtCoupleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_ivPlus1"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ticket_ivPlus1"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/add" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_2sdp">

        <ImageView
            android:id="@+id/img_couple2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/ticket_female" />

        <TextView
            android:id="@+id/ticket_txtFemalePriceDiscounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_couple2"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_txtFemalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ticket_txtFemalePriceDiscounted"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textColor="#DF3C4D"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/ticket_txtFemalePriceDescription"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_txtFemalePrice"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/img_couple2"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Full Cover charge"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/ticket_ivPlus2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/add" />

        <TextView
            android:id="@+id/ticket_txtFemaleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_ivPlus2"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ticket_ivMinus2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_txtFemaleCount"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/sub" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        android:layout_marginTop="@dimen/_2sdp">

        <ImageView
            android:id="@+id/img_couple3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_4sdp"
            android:src="@mipmap/ticket_male" />

        <TextView
            android:id="@+id/ticket_txtMalePriceDiscounted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img_couple3"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ticket_txtMalePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/ticket_txtMalePriceDiscounted"
            android:fontFamily="sans-serif"
            android:text="₹ "
            android:textColor="#DF3C4D"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/ticket_txtMalePriceDescription"
            android:layout_width="@dimen/_125sdp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_txtMalePrice"
            android:layout_marginLeft="@dimen/_4sdp"
            android:layout_toRightOf="@+id/img_couple3"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:text="Full Cover charge"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/ticket_ivPlus3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/add" />

        <TextView
            android:id="@+id/ticket_txtMaleCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_ivPlus3"
            android:fontFamily="sans-serif"
            android:text="0"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ticket_ivMinus3"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ticket_txtMaleCount"
            android:padding="@dimen/_15sdp"
            android:src="@mipmap/sub" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:visibility="visible">

        <TextView
            android:id="@+id/ticket_txtCouple"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Couple 0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ticket_txtFemale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Female 0"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/ticket_txtMale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Male 0"
            android:textColor="@color/black" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_marginLeft="@dimen/_7sdp"
            android:fontFamily="sans-serif"
            android:text="You Pay"
            android:textColor="@color/black"
            android:textSize="@dimen/_13sdp" />

        <TextView
            android:id="@+id/ticket_txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="@dimen/_7sdp"
            android:fontFamily="sans-serif"
            android:text="\u20B9 "
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_13sdp" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <TextView
        android:id="@+id/txt_Charge"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_below="@+id/Male_view1"
        android:background="@color/white"
        android:fontFamily="sans-serif"
        android:padding="@dimen/_7sdp"
        android:text="All Charges Payable at Venue"
        android:textColor="@color/colorPrimaryDark" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_2sdp">

        <TextView
            android:id="@+id/book_txtBookNow"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="bottom"
            android:background="@drawable/checkin_shape"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Confirm Booking"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

    </FrameLayout>

</LinearLayout>
