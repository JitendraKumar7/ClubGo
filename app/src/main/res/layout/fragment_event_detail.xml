<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="in.clubgo.app.events.FragmentDetail">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivTime"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/time" />

        <TextView
            android:id="@+id/event_txtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivTime"
            android:fontFamily="sans-serif"
            android:text="Time"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtTime"
            android:layout_alignStart="@+id/event_txtTime"
            android:layout_below="@+id/event_txtTime"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/event_rvArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivArtist"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/djicon" />

        <TextView
            android:id="@+id/event_txtArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivArtist"
            android:fontFamily="sans-serif"
            android:text="Artist"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtArtist"
            android:layout_alignStart="@+id/event_txtArtist"
            android:layout_below="@+id/event_txtArtist"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/event_imgUser"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_28sdp"
            android:layout_marginTop="5dp"
            android:src="@drawable/image_holder" />

        <ImageView
            android:id="@+id/ivArtist"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/nxt" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivMusic"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/music" />

        <TextView
            android:id="@+id/event_txtMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivMusic"
            android:fontFamily="sans-serif"
            android:text="Music"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtMusic"
            android:layout_alignStart="@+id/event_txtMusic"
            android:layout_below="@+id/event_txtMusic"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/event_rvDressCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivDressCode"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/dresscode" />

        <TextView
            android:id="@+id/event_txtDressCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivDressCode"
            android:fontFamily="sans-serif"
            android:text="Dress Code"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubDressCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtDressCode"
            android:layout_alignStart="@+id/event_txtDressCode"
            android:layout_below="@+id/event_txtDressCode"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/ivDressCode"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/nxt" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:id="@+id/event_rvMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivMenu"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/menu" />

        <TextView
            android:id="@+id/event_txtMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivMenu"
            android:fontFamily="sans-serif"
            android:text="Menu"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtMenu"
            android:layout_alignStart="@+id/event_txtMenu"
            android:layout_below="@+id/event_txtMenu"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:scaleType="fitXY"
            android:src="@mipmap/nxt" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp">

        <ImageView
            android:id="@+id/event_ivCategory"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerVertical="true"
            android:padding="@dimen/_7sdp"
            android:src="@mipmap/category" />

        <TextView
            android:id="@+id/event_txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_toRightOf="@+id/event_ivCategory"
            android:fontFamily="sans-serif"
            android:text="Category"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/event_txtSubCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/event_txtCategory"
            android:layout_alignStart="@+id/event_txtCategory"
            android:layout_below="@+id/event_txtCategory"
            android:fontFamily="sans-serif"
            android:textSize="@dimen/_10sdp" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
